{
  "$schema": "https://tr.designtokens.org/format/",
  "$description": "Core semantic spacing tokens - Base values that can be overridden by themes",
  "spacing": {
    "none": { "$type": "dimension", "$value": "{primitive.spacing.0}" },
    "xs": { "$type": "dimension", "$value": "{primitive.spacing.4}" },
    "sm": { "$type": "dimension", "$value": "{primitive.spacing.8}" },
    "md": { "$type": "dimension", "$value": "{primitive.spacing.12}" },
    "base": { "$type": "dimension", "$value": "{primitive.spacing.16}", "$description": "Default spacing unit - 16px" },
    "lg": { "$type": "dimension", "$value": "{primitive.spacing.24}" },
    "xl": { "$type": "dimension", "$value": "{primitive.spacing.32}" },
    "2xl": { "$type": "dimension", "$value": "{primitive.spacing.48}" },
    "3xl": { "$type": "dimension", "$value": "{primitive.spacing.64}" },
    "4xl": { "$type": "dimension", "$value": "{primitive.spacing.96}" },
    "5xl": { "$type": "dimension", "$value": "{primitive.spacing.128}" }
  }
}
