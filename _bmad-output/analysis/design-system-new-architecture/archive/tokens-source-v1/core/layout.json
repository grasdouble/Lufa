{
  "$schema": "https://tr.designtokens.org/format/",
  "$description": "Core layout tokens - Container widths and responsive constraints",
  "maxWidth": {
    "3xs": { "$type": "dimension", "$value": "{primitive.maxWidth.256}", "$description": "256px - 3xs container" },
    "2xs": { "$type": "dimension", "$value": "{primitive.maxWidth.288}", "$description": "288px - 2xs container" },
    "xs": {
      "$type": "dimension",
      "$value": "{primitive.maxWidth.384}",
      "$description": "384px - xs container (modals, forms, narrow content)"
    },
    "sm": { "$type": "dimension", "$value": "{primitive.maxWidth.448}", "$description": "448px - Small container" },
    "md": { "$type": "dimension", "$value": "{primitive.maxWidth.512}", "$description": "512px - Medium container" },
    "lg": {
      "$type": "dimension",
      "$value": "{primitive.maxWidth.576}",
      "$description": "576px - Large container (article content, optimal line length)"
    },
    "xl": { "$type": "dimension", "$value": "{primitive.maxWidth.640}", "$description": "640px - xl container" },
    "2xl": {
      "$type": "dimension",
      "$value": "{primitive.maxWidth.672}",
      "$description": "672px - 2xl container (blog posts, optimal readability)"
    },
    "3xl": {
      "$type": "dimension",
      "$value": "{primitive.maxWidth.768}",
      "$description": "768px - 3xl container (standard page)"
    },
    "4xl": { "$type": "dimension", "$value": "{primitive.maxWidth.896}", "$description": "896px - 4xl container" },
    "5xl": {
      "$type": "dimension",
      "$value": "{primitive.maxWidth.1024}",
      "$description": "1024px - 5xl container (dashboards)"
    },
    "6xl": {
      "$type": "dimension",
      "$value": "{primitive.maxWidth.1152}",
      "$description": "1152px - 6xl container (wide layouts)"
    },
    "7xl": {
      "$type": "dimension",
      "$value": "{primitive.maxWidth.1280}",
      "$description": "1280px - 7xl container (extra wide layouts)"
    },
    "8xl": {
      "$type": "dimension",
      "$value": "{primitive.maxWidth.1440}",
      "$description": "1440px - 8xl container (full-width dashboards)"
    },
    "full": {
      "$type": "string",
      "$value": "{primitive.maxWidth.full}",
      "$description": "100% - Fluid width, no constraint"
    },
    "none": { "$type": "string", "$value": "{primitive.maxWidth.none}", "$description": "none - Unconstrained width" }
  }
}
