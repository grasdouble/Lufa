@reference '../../../tailwind.css';

@layer components {
  .tabs {
    @apply w-full;
  }

  .tabList {
    @apply flex;
  }

  .tab {
    @apply reset-button;
    @apply inline-flex items-center gap-2;
    @apply transition-all duration-200;
    @apply cursor-pointer;
    @apply relative;
  }

  .tab:focus-visible {
    @apply outline-interactive-focus outline-2 outline-offset-2;
  }

  .tabDisabled {
    @apply cursor-not-allowed opacity-50;
  }

  .icon {
    @apply inline-flex items-center;
  }

  .tabContent {
    @apply py-4;
  }

  /* Type: Line */
  .typeLine .tabList {
    @apply border-b-2 border-gray-200 dark:border-gray-700;
  }

  .typeLine .tab {
    @apply px-4 py-2;
    @apply text-gray-600 dark:text-gray-400;
    @apply border-b-2 border-transparent;
    @apply -mb-0.5;
  }

  .typeLine .tab:hover:not(.tabDisabled) {
    @apply text-interactive-default;
    @apply border-interactive-default/50;
  }

  .typeLine .tabActive {
    @apply text-interactive-default;
    @apply border-interactive-default;
    @apply font-medium;
  }

  /* Type: Card */
  .typeCard .tabList {
    @apply gap-1;
    @apply border-b border-gray-200 dark:border-gray-700;
  }

  .typeCard .tab {
    @apply rounded-t-md px-4 py-2;
    @apply text-gray-600 dark:text-gray-400;
    @apply bg-gray-100 dark:bg-gray-800;
    @apply border border-gray-200 dark:border-gray-700;
    @apply border-b-0;
    @apply -mb-px;
  }

  .typeCard .tab:hover:not(.tabDisabled) {
    @apply bg-gray-200 dark:bg-gray-700;
  }

  .typeCard .tabActive {
    @apply bg-white dark:bg-gray-900;
    @apply text-interactive-default;
    @apply font-medium;
  }

  /* Type: Pill */
  .typePill .tabList {
    @apply gap-2;
    @apply rounded-lg p-1;
    @apply bg-gray-100 dark:bg-gray-800;
  }

  .typePill .tab {
    @apply rounded-md px-4 py-2;
    @apply text-gray-600 dark:text-gray-400;
  }

  .typePill .tab:hover:not(.tabDisabled) {
    @apply bg-gray-200 dark:bg-gray-700;
  }

  .typePill .tabActive {
    @apply bg-white dark:bg-gray-900;
    @apply text-interactive-default;
    @apply font-medium;
    @apply shadow-sm;
  }

  /* Position: Top */
  .positionTop {
    @apply flex flex-col;
  }

  .positionTop .tabList {
    @apply flex-row;
  }

  /* Position: Bottom */
  .positionBottom {
    @apply flex flex-col-reverse;
  }

  .positionBottom .tabList {
    @apply flex-row;
  }

  .positionBottom.typeLine .tabList {
    @apply border-t-2 border-b-0;
  }

  .positionBottom.typeLine .tab {
    @apply border-t-2 border-b-0;
    @apply -mt-0.5 mb-0;
  }

  .positionBottom.typeCard .tabList {
    @apply border-t border-b-0;
  }

  .positionBottom.typeCard .tab {
    @apply rounded-t-none rounded-b-md;
    @apply border-t-0 border-b;
    @apply -mt-px mb-0;
  }

  /* Position: Left */
  .positionLeft {
    @apply flex flex-row;
  }

  .positionLeft .tabList {
    @apply flex-col;
    @apply border-r-2 border-gray-200 dark:border-gray-700;
  }

  .positionLeft.typeLine .tab {
    @apply border-r-2 border-b-0;
    @apply -mr-0.5 mb-0;
  }

  /* Position: Right */
  .positionRight {
    @apply flex flex-row-reverse;
  }

  .positionRight .tabList {
    @apply flex-col;
    @apply border-l-2 border-gray-200 dark:border-gray-700;
  }

  .positionRight.typeLine .tab {
    @apply border-b-0 border-l-2;
    @apply mb-0 -ml-0.5;
  }

  /* Sizes */
  .sizeSmall .tab {
    @apply px-3 py-1.5 text-sm;
  }

  .sizeMedium .tab {
    @apply px-4 py-2 text-base;
  }

  .sizeLarge .tab {
    @apply px-5 py-2.5 text-lg;
  }
}
