{
  "name": "@grasdouble/lufa_design-system-mcp",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "pnpm run clean && tsc -p tsconfig.build.json",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist",
    "dev": "ts-node src/server/lufaDesignSystemMcpServer.ts",
    "inspector": "pnpm run build && npx @modelcontextprotocol/inspector node dist/server/lufaDesignSystemMcpServer.js --title 'Lufa Design System MCP'",
    "lint": "eslint ./src",
    "prettier": "prettier --write .",
    "preview": "ts-node src/server/lufaDesignSystemMcpServer.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@grasdouble/lufa_design-system-primitives": "workspace:^",
    "@grasdouble/lufa_design-system-tokens": "workspace:^",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@grasdouble/lufa_config_eslint": "workspace:^",
    "@grasdouble/lufa_config_prettier": "workspace:^",
    "@grasdouble/lufa_config_tsconfig": "workspace:^",
    "@types/node": "^25.0.3",
    "node-fetch": "^3.3.2",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  }
}
