{
  "name": "@grasdouble/lufa_design-system-docusaurus",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "pnpm clear && docusaurus build",
    "clear": "docusaurus clear",
    "deploy": "docusaurus deploy",
    "dev": "pnpm clear && docusaurus start",
    "docusaurus": "docusaurus",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "serve": "docusaurus serve",
    "swizzle": "docusaurus swizzle",
    "typecheck": "tsc",
    "update-changelog": "node scripts/update-changelog.js",
    "validate:token-usage": "node scripts/validate-token-usage.js",
    "validate:token-usage:unused": "node scripts/validate-token-usage.js --unused",
    "validate:token-usage:verbose": "node scripts/validate-token-usage.js --verbose",
    "write-heading-ids": "docusaurus write-heading-ids",
    "write-translations": "docusaurus write-translations"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "bash -c 'pnpm typecheck'"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "dependencies": {
    "@docusaurus/core": "3.9.2",
    "@docusaurus/faster": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@docusaurus/theme-common": "^3.9.2",
    "@docusaurus/theme-live-codeblock": "^3.9.2",
    "@easyops-cn/docusaurus-search-local": "^0.52.3",
    "@grasdouble/lufa_design-system": "workspace:^",
    "@grasdouble/lufa_design-system-themes": "workspace:^",
    "@grasdouble/lufa_design-system-tokens": "workspace:^",
    "@mdx-js/react": "^3.1.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.9.2",
    "@docusaurus/tsconfig": "3.9.2",
    "@docusaurus/types": "3.9.2",
    "@grasdouble/lufa_config_eslint": "workspace:^",
    "@grasdouble/lufa_config_prettier": "workspace:^",
    "@grasdouble/lufa_config_tsconfig": "workspace:^",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/node": "^25.1.0",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "prettier-plugin-packagejson": "^3.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0"
  }
}
