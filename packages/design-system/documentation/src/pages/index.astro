---
import BaseLayout from '../layouts/BaseLayout.astro';
import tokens from '@grasdouble/lufa_design-system-tokens';

const features = [
  {
    title: 'Accessible by Default',
    description: 'Built with WCAG 2.2 Level AA compliance in mind. All components support keyboard navigation and screen readers.',
    icon: '‚ôø',
  },
  {
    title: 'Design Tokens',
    description: 'Semantic design tokens for consistent theming across your application. Support for light and dark modes out of the box.',
    icon: 'üé®',
  },
  {
    title: 'TypeScript First',
    description: 'Fully typed components with comprehensive prop documentation. Great developer experience with IntelliSense support.',
    icon: 'üìò',
  },
  {
    title: 'React 19 Ready',
    description: 'Built with the latest React features including hooks and functional components. No class components.',
    icon: '‚öõÔ∏è',
  },
  {
    title: 'Tailwind CSS v4',
    description: 'Styled with Tailwind CSS for utility-first styling. Easy to customize and extend.',
    icon: 'üí®',
  },
  {
    title: 'Comprehensive Docs',
    description: 'Detailed documentation with live examples, API references, and best practices for every component.',
    icon: 'üìö',
  },
];
---

<BaseLayout title="Home">
  <div class="min-h-screen bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-800">
    <!-- Hero Section -->
    <section class="relative overflow-hidden py-20 sm:py-32">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl sm:text-6xl font-bold tracking-tight text-gray-900 dark:text-white">
            Lufa Design System
          </h1>
          <p class="mt-6 text-lg sm:text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
            A modern, accessible design system built with React and Tailwind CSS. Build beautiful, consistent user interfaces with ease.
          </p>
          <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/docs/intro"
              class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors"
            >
              Get Started
            </a>
            <a
              href="/docs/getting-started/installation"
              class="inline-flex items-center justify-center px-8 py-3 border border-gray-300 dark:border-gray-600 text-base font-medium rounded-lg text-gray-900 dark:text-white bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
            >
              Installation Guide
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-16 sm:py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white">
            Why Lufa?
          </h2>
          <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">
            Everything you need to build modern, accessible web applications
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {features.map((feature) => (
            <div class="relative p-6 bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 hover:shadow-md transition-shadow">
              <div class="text-4xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {feature.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                {feature.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 sm:py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-blue-600 dark:bg-blue-700 rounded-2xl shadow-xl overflow-hidden">
          <div class="px-6 py-12 sm:px-12 sm:py-16 text-center">
            <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
              Ready to get started?
            </h2>
            <p class="text-lg text-blue-100 mb-8 max-w-2xl mx-auto">
              Install Lufa Design System and start building beautiful, accessible interfaces today.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href="/docs/getting-started/installation"
                class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-blue-600 bg-white hover:bg-gray-50 transition-colors"
              >
                View Installation Guide
              </a>
              <a
                href="/docs/components/overview"
                class="inline-flex items-center justify-center px-8 py-3 border-2 border-white text-base font-medium rounded-lg text-white hover:bg-blue-700 transition-colors"
              >
                Browse Components
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
