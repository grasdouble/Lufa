{
    "name": "@grasdouble/lufa_design-system",
    "version": "0.1.2",
    "license": "CC-BY-NC-4.0",
    "type": "module",
    "scripts": {
        "lint": "eslint ./src",
        "build:types": "tsc --emitDeclarationOnly",
        "prettier:fix": "prettier --write .",
        "build": "vite build && tsx scripts/generate-foundation-css.ts && tsx scripts/copy-tailwind-css.ts && tsx scripts/build-foundation-bundle.ts",
        "preview": "vite preview",
        "generate:foundation": "tsx scripts/generate-foundation-css.ts"
    },
    "private": false,
    "publishConfig": {
        "access": "public",
        "registry": "https://npm.pkg.github.com"
    },
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/lufa-ui.mjs"
        },
        "./foundation.css": "./dist/foundation.css",
        "./style.css": "./dist/style.css",
        "./tailwind.css": "./dist/tailwind.css",
        "./themes/ocean.css": "./dist/themes/ocean.css",
        "./themes/forest.css": "./dist/themes/forest.css"
    },
    "devDependencies": {
        "@grasdouble/lufa_config_eslint": "workspace:^",
        "@grasdouble/lufa_config_prettier": "workspace:^",
        "@grasdouble/lufa_config_tsconfig": "workspace:^",
        "@tailwindcss/vite": "^4.1.17",
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.1",
        "eslint": "^9.39.1",
        "postcss": "^8.5.6",
        "prettier": "^3.7.3",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "tailwindcss": "^4.1.17",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vite": "^7.2.4",
        "vite-plugin-compression": "^0.5.1",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-externalize-deps": "^0.10.0",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "dependencies": {
        "@headlessui/react": "^2.2.9",
        "@heroicons/react": "^2.2.0",
        "clsx": "^2.1.1"
    },
    "peerDependencies": {
        "react": "^19.1.0"
    }
}
