{
  "core": {
    "typography": {
      "heading": {
        "font-family": {
          "$value": "{primitive.typography.font-family.sans}",
          "$type": "fontFamily",
          "$description": "Font family for all heading levels (h1-h6)",
          "$extensions": {
            "lufa": {
              "level": "core",
              "category": "typography",
              "useCase": "Headings, page titles, section titles",
              "themeable": true,
              "modeAware": false
            }
          }
        },
        "font-weight": {
          "$value": "{primitive.typography.font-weight.bold}",
          "$type": "fontWeight",
          "$description": "Font weight for all heading levels",
          "$extensions": {
            "lufa": {
              "level": "core",
              "category": "typography",
              "useCase": "H1-H6 font weight, page titles",
              "themeable": true,
              "modeAware": false
            }
          }
        },
        "font-size": {
          "h1": {
            "$value": "{primitive.typography.font-size.5xl}",
            "$type": "dimension",
            "$description": "Font size for H1 headings (largest)",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "typography",
                "useCase": "H1 headings, page titles, hero titles",
                "themeable": true,
                "modeAware": false
              }
            }
          },
          "h2": {
            "$value": "{primitive.typography.font-size.4xl}",
            "$type": "dimension",
            "$description": "Font size for H2 headings",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "typography",
                "useCase": "H2 headings, major section titles",
                "themeable": true,
                "modeAware": false
              }
            }
          },
          "h3": {
            "$value": "{primitive.typography.font-size.3xl}",
            "$type": "dimension",
            "$description": "Font size for H3 headings",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "typography",
                "useCase": "H3 headings, subsection titles",
                "themeable": true,
                "modeAware": false
              }
            }
          },
          "h4": {
            "$value": "{primitive.typography.font-size.2xl}",
            "$type": "dimension",
            "$description": "Font size for H4 headings",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "typography",
                "useCase": "H4 headings, card titles",
                "themeable": true,
                "modeAware": false
              }
            }
          },
          "h5": {
            "$value": "{primitive.typography.font-size.xl}",
            "$type": "dimension",
            "$description": "Font size for H5 headings",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "typography",
                "useCase": "H5 headings, list group titles",
                "themeable": true,
                "modeAware": false
              }
            }
          },
          "h6": {
            "$value": "{primitive.typography.font-size.lg}",
            "$type": "dimension",
            "$description": "Font size for H6 headings (smallest)",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "typography",
                "useCase": "H6 headings, inline section titles",
                "themeable": true,
                "modeAware": false
              }
            }
          }
        }
      }
    }
  }
}
