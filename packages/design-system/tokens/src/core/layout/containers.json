{
  "core": {
    "layout": {
      "container": {
        "sm": {
          "$value": "{primitive.breakpoint.sm}",
          "$type": "dimension",
          "$description": "Small container max-width (640px)",
          "$extensions": {
            "lufa": {
              "level": "core",
              "category": "layout-container",
              "useCase": "Narrow content containers, forms, small sections",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "md": {
          "$value": "{primitive.breakpoint.md}",
          "$type": "dimension",
          "$description": "Medium container max-width (768px)",
          "$extensions": {
            "lufa": {
              "level": "core",
              "category": "layout-container",
              "useCase": "Medium content containers, article width",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "lg": {
          "$value": "{primitive.breakpoint.lg}",
          "$type": "dimension",
          "$description": "Large container max-width (1024px)",
          "$extensions": {
            "lufa": {
              "level": "core",
              "category": "layout-container",
              "useCase": "Standard page containers, main content areas",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "xl": {
          "$value": "{primitive.breakpoint.xl}",
          "$type": "dimension",
          "$description": "Extra large container max-width (1280px)",
          "$extensions": {
            "lufa": {
              "level": "core",
              "category": "layout-container",
              "useCase": "Wide page containers, dashboard layouts",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "2xl": {
          "$value": "{primitive.breakpoint.2xl}",
          "$type": "dimension",
          "$description": "2X extra large container max-width (1536px)",
          "$extensions": {
            "lufa": {
              "level": "core",
              "category": "layout-container",
              "useCase": "Ultra-wide containers, large screen layouts",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "gutter": {
          "base": {
            "$value": "{primitive.spacing.16}",
            "$type": "dimension",
            "$description": "Horizontal gutter between container and content on mobile",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "layout",
                "useCase": "Container internal gutters, grid gaps",
                "responsive": {
                  "breakpoint": "base",
                  "applyAt": "all"
                },
                "themeable": false,
                "modeAware": false
              }
            }
          },
          "md": {
            "$value": "{primitive.spacing.24}",
            "$type": "dimension",
            "$description": "Horizontal gutter between container and content on tablet",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "layout",
                "useCase": "Container gutters on tablets",
                "responsive": {
                  "breakpoint": "md",
                  "applyAt": "768px"
                },
                "themeable": false,
                "modeAware": false
              }
            }
          },
          "lg": {
            "$value": "{primitive.spacing.32}",
            "$type": "dimension",
            "$description": "Horizontal gutter between container and content on desktop",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "layout",
                "useCase": "Container gutters on desktop",
                "responsive": {
                  "breakpoint": "lg",
                  "applyAt": "1024px"
                },
                "themeable": false,
                "modeAware": false
              }
            }
          },
          "fluid": {
            "$value": "clamp(16px, 4vw, 48px)",
            "$type": "dimension",
            "$description": "Fluid container gutters (scales from 16px to 48px)",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "layout",
                "useCase": "Responsive container internal spacing",
                "fluid": true,
                "themeable": false,
                "modeAware": false
              }
            }
          }
        }
      }
    }
  }
}
