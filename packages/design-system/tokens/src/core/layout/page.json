{
  "core": {
    "layout": {
      "page": {
        "padding": {
          "base": {
            "$value": "{primitive.spacing.16}",
            "$type": "dimension",
            "$description": "Horizontal padding for page container on mobile viewports",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "layout",
                "useCase": "Page container padding, main content area horizontal spacing",
                "responsive": {
                  "breakpoint": "base",
                  "applyAt": "all"
                },
                "themeable": false,
                "modeAware": false
              }
            }
          },
          "md": {
            "$value": "{primitive.spacing.24}",
            "$type": "dimension",
            "$description": "Horizontal padding for page container on tablet viewports",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "layout",
                "useCase": "Page container padding on tablets",
                "responsive": {
                  "breakpoint": "md",
                  "applyAt": "768px"
                },
                "themeable": false,
                "modeAware": false
              }
            }
          },
          "lg": {
            "$value": "{primitive.spacing.32}",
            "$type": "dimension",
            "$description": "Horizontal padding for page container on desktop viewports",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "layout",
                "useCase": "Page container padding on desktop",
                "responsive": {
                  "breakpoint": "lg",
                  "applyAt": "1024px"
                },
                "themeable": false,
                "modeAware": false
              }
            }
          }
        },
        "margin": {
          "fluid": {
            "$value": "clamp(16px, 3vw, 32px)",
            "$type": "dimension",
            "$description": "Fluid page margins (scales from 16px to 32px)",
            "$extensions": {
              "lufa": {
                "level": "core",
                "category": "layout",
                "useCase": "Page-level horizontal margins with smooth scaling",
                "fluid": true,
                "themeable": false,
                "modeAware": false
              }
            }
          }
        }
      }
    }
  }
}
