{
  "primitive": {
    "icon-size": {
      "scale": {
        "xs": {
          "$value": "16px",
          "$type": "dimension",
          "$description": "Extra small icon size - compact UI",
          "$extensions": {
            "lufa": {
              "level": "primitive",
              "category": "icon-size",
              "useCase": "Badges, small buttons, compact indicators",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "sm": {
          "$value": "20px",
          "$type": "dimension",
          "$description": "Small icon size - standard UI",
          "$extensions": {
            "lufa": {
              "level": "primitive",
              "category": "icon-size",
              "useCase": "Button icons, input icons, default icon size",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "md": {
          "$value": "24px",
          "$type": "dimension",
          "$description": "Medium icon size - emphasized UI",
          "$extensions": {
            "lufa": {
              "level": "primitive",
              "category": "icon-size",
              "useCase": "Large buttons, card icons, section headers",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "lg": {
          "$value": "32px",
          "$type": "dimension",
          "$description": "Large icon size - prominent UI",
          "$extensions": {
            "lufa": {
              "level": "primitive",
              "category": "icon-size",
              "useCase": "Modal headers, feature cards, hero sections",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "xl": {
          "$value": "40px",
          "$type": "dimension",
          "$description": "Extra large icon size - hero UI",
          "$extensions": {
            "lufa": {
              "level": "primitive",
              "category": "icon-size",
              "useCase": "Hero sections, landing pages, large feature displays",
              "themeable": false,
              "modeAware": false
            }
          }
        }
      }
    }
  }
}
