{
  "primitive": {
    "shadow": {
      "elevation": {
        "none": {
          "$value": {
            "offsetX": "0px",
            "offsetY": "0px",
            "blur": "0px",
            "spread": "0px",
            "color": "rgba(0, 0, 0, 0)"
          },
          "$type": "shadow",
          "$description": "No shadow - surface at base level",
          "$extensions": {
            "lufa": {
              "level": "primitive",
              "category": "shadow",
              "elevation": 0,
              "useCase": "Flat elements, base surfaces",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "sm": {
          "$value": {
            "offsetX": "0px",
            "offsetY": "1px",
            "blur": "2px",
            "spread": "0px",
            "color": "rgba(0, 0, 0, 0.05)"
          },
          "$type": "shadow",
          "$description": "Small shadow - subtle elevation for cards and panels",
          "$extensions": {
            "lufa": {
              "level": "primitive",
              "category": "shadow",
              "elevation": 1,
              "useCase": "Light cards, badges, pills",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "base": {
          "$value": {
            "offsetX": "0px",
            "offsetY": "2px",
            "blur": "4px",
            "spread": "0px",
            "color": "rgba(0, 0, 0, 0.1)"
          },
          "$type": "shadow",
          "$description": "Base shadow - standard elevation for cards",
          "$extensions": {
            "lufa": {
              "level": "primitive",
              "category": "shadow",
              "elevation": 2,
              "useCase": "Standard cards, panels, elevated surfaces",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "md": {
          "$value": {
            "offsetX": "0px",
            "offsetY": "4px",
            "blur": "6px",
            "spread": "0px",
            "color": "rgba(0, 0, 0, 0.1)"
          },
          "$type": "shadow",
          "$description": "Medium shadow - elevation for dropdowns and popovers",
          "$extensions": {
            "lufa": {
              "level": "primitive",
              "category": "shadow",
              "elevation": 3,
              "useCase": "Dropdowns, popovers, tooltips",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "lg": {
          "$value": {
            "offsetX": "0px",
            "offsetY": "8px",
            "blur": "16px",
            "spread": "0px",
            "color": "rgba(0, 0, 0, 0.12)"
          },
          "$type": "shadow",
          "$description": "Large shadow - elevation for modals and sidebars",
          "$extensions": {
            "lufa": {
              "level": "primitive",
              "category": "shadow",
              "elevation": 4,
              "useCase": "Modals, sidebars, drawers",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "xl": {
          "$value": {
            "offsetX": "0px",
            "offsetY": "12px",
            "blur": "24px",
            "spread": "0px",
            "color": "rgba(0, 0, 0, 0.15)"
          },
          "$type": "shadow",
          "$description": "Extra large shadow - maximum elevation for floating elements",
          "$extensions": {
            "lufa": {
              "level": "primitive",
              "category": "shadow",
              "elevation": 5,
              "useCase": "Floating elements, important notifications, dialogs",
              "themeable": false,
              "modeAware": false
            }
          }
        }
      }
    }
  }
}
