{
  "semantic": {
    "ui": {
      "radius": {
        "small": {
          "$value": "{primitive.radius.scale.base}",
          "$type": "dimension",
          "$description": "Small border radius for subtle rounding (4px)",
          "$extensions": {
            "lufa": {
              "level": "semantic",
              "category": "ui",
              "subcategory": "radius",
              "useCase": "Badges, tags, tooltips, compact buttons, chips",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "default": {
          "$value": "{primitive.radius.scale.lg}",
          "$type": "dimension",
          "$description": "Default border radius for standard components (8px - most common)",
          "$extensions": {
            "lufa": {
              "level": "semantic",
              "category": "ui",
              "subcategory": "radius",
              "useCase": "Buttons, inputs, cards, modals, standard rounded corners",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "medium": {
          "$value": "{primitive.radius.scale.xl}",
          "$type": "dimension",
          "$description": "Medium border radius for emphasized rounding (12px)",
          "$extensions": {
            "lufa": {
              "level": "semantic",
              "category": "ui",
              "subcategory": "radius",
              "useCase": "Large cards, popovers, emphasized components, feature sections",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "large": {
          "$value": "{primitive.radius.scale.2xl}",
          "$type": "dimension",
          "$description": "Large border radius for prominent rounding (16px)",
          "$extensions": {
            "lufa": {
              "level": "semantic",
              "category": "ui",
              "subcategory": "radius",
              "useCase": "Modal dialogs, hero cards, large panels, prominent components",
              "themeable": false,
              "modeAware": false
            }
          }
        },
        "full": {
          "$value": "{primitive.radius.scale.full}",
          "$type": "dimension",
          "$description": "Full border radius for pill-shaped elements (9999px)",
          "$extensions": {
            "lufa": {
              "level": "semantic",
              "category": "ui",
              "subcategory": "radius",
              "useCase": "Badges, pills, circular avatars, fully rounded buttons",
              "themeable": false,
              "modeAware": false
            }
          }
        }
      }
    }
  }
}
