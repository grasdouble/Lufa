{
  "semantic": {
    "ui": {
      "animation": {
        "pulse": {
          "duration": {
            "$value": "2s",
            "$type": "duration",
            "$description": "Duration for pulse animation (breathing, pulsing effects)",
            "$extensions": {
              "lufa": {
                "level": "semantic",
                "category": "ui",
                "subcategory": "animation",
                "useCase": "Loading indicators, attention-grabbing elements, breathing effects",
                "themeable": true,
                "modeAware": false
              }
            }
          },
          "timing": {
            "$value": "{primitive.motion.easing.ease-in-out}",
            "$type": "cubicBezier",
            "$description": "Timing function for pulse animation",
            "$extensions": {
              "lufa": {
                "level": "semantic",
                "category": "ui",
                "subcategory": "animation",
                "useCase": "Smooth pulsing effects",
                "themeable": true,
                "modeAware": false
              }
            }
          }
        },
        "shimmer": {
          "duration": {
            "$value": "2s",
            "$type": "duration",
            "$description": "Duration for shimmer animation (loading skeleton, shine effects)",
            "$extensions": {
              "lufa": {
                "level": "semantic",
                "category": "ui",
                "subcategory": "animation",
                "useCase": "Skeleton loaders, loading states, shimmer effects",
                "themeable": true,
                "modeAware": false
              }
            }
          },
          "timing": {
            "$value": "{primitive.motion.easing.linear}",
            "$type": "cubicBezier",
            "$description": "Timing function for shimmer animation",
            "$extensions": {
              "lufa": {
                "level": "semantic",
                "category": "ui",
                "subcategory": "animation",
                "useCase": "Continuous shimmer movement",
                "themeable": true,
                "modeAware": false
              }
            }
          }
        },
        "slide-in": {
          "duration": {
            "$value": "{primitive.motion.duration.normal}",
            "$type": "duration",
            "$description": "Duration for slide-in animation",
            "$extensions": {
              "lufa": {
                "level": "semantic",
                "category": "ui",
                "subcategory": "animation",
                "useCase": "Panel slides, drawer animations, modal entrances",
                "themeable": true,
                "modeAware": false
              }
            }
          },
          "timing": {
            "$value": "{primitive.motion.easing.ease-out}",
            "$type": "cubicBezier",
            "$description": "Timing function for slide-in animation",
            "$extensions": {
              "lufa": {
                "level": "semantic",
                "category": "ui",
                "subcategory": "animation",
                "useCase": "Smooth entrance animations",
                "themeable": true,
                "modeAware": false
              }
            }
          }
        }
      }
    }
  }
}
