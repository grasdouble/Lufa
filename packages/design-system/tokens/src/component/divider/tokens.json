{
  "component": {
    "divider": {
      "emphasis": {
        "subtle": {
          "color": {
            "$value": "{semantic.ui.border-default}",
            "$type": "color",
            "$description": "Subtle emphasis divider color (light gray)"
          },
          "thickness": {
            "$value": "1px",
            "$type": "dimension",
            "$description": "Subtle emphasis thickness"
          }
        },
        "default": {
          "color": {
            "$value": "{semantic.ui.border-default}",
            "$type": "color",
            "$description": "Default emphasis divider color (gray)"
          },
          "thickness": {
            "$value": "1px",
            "$type": "dimension",
            "$description": "Default emphasis thickness"
          }
        },
        "moderate": {
          "color": {
            "$value": "{semantic.ui.border-default}",
            "$type": "color",
            "$description": "Moderate emphasis divider color (gray)"
          },
          "thickness": {
            "$value": "2px",
            "$type": "dimension",
            "$description": "Moderate emphasis thickness - more visible"
          }
        },
        "strong": {
          "color": {
            "$value": "{semantic.ui.border-strong}",
            "$type": "color",
            "$description": "Strong emphasis divider color (darker gray)"
          },
          "thickness": {
            "$value": "2px",
            "$type": "dimension",
            "$description": "Strong emphasis thickness"
          }
        },
        "bold": {
          "color": {
            "$value": "{semantic.ui.border-strong}",
            "$type": "color",
            "$description": "Bold emphasis divider color (darker gray)"
          },
          "thickness": {
            "$value": "4px",
            "$type": "dimension",
            "$description": "Bold emphasis thickness - major section breaks"
          }
        }
      },
      "spacing": {
        "compact": {
          "$value": "{semantic.ui.spacing-compact}",
          "$type": "dimension",
          "$description": "Compact spacing around divider",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "divider",
              "useCase": "Dense layouts"
            }
          }
        },
        "default": {
          "$value": "{semantic.ui.spacing-default}",
          "$type": "dimension",
          "$description": "Default spacing around divider",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "divider",
              "useCase": "Standard layouts"
            }
          }
        },
        "comfortable": {
          "$value": "{semantic.ui.spacing-comfortable}",
          "$type": "dimension",
          "$description": "Comfortable spacing around divider",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "divider",
              "useCase": "Spacious layouts"
            }
          }
        }
      },
      "length": {
        "full": {
          "$value": "100%",
          "$type": "dimension",
          "$description": "Full length divider (spans entire container)",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "divider",
              "useCase": "Complete separation"
            }
          }
        },
        "medium": {
          "$value": "66%",
          "$type": "dimension",
          "$description": "Medium length divider (2/3 of container)",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "divider",
              "useCase": "Partial separation"
            }
          }
        },
        "short": {
          "$value": "33%",
          "$type": "dimension",
          "$description": "Short length divider (1/3 of container)",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "divider",
              "useCase": "Visual accent, decoration"
            }
          }
        }
      }
