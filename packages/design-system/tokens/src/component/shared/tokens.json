{
  "component": {
    "shared": {
      "divider": {
        "thickness": {
          "$value": "1px",
          "$type": "dimension",
          "$description": "Standard divider/separator thickness",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "Divider component, horizontal rules, separators",
              "themable": false
            }
          }
        },
        "color": {
          "$value": "{semantic.ui.border-default}",
          "$type": "color",
          "$description": "Divider color using semantic border",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "Divider component color",
              "themable": true
            }
          }
        }
      },
      "icon": {
        "size-xs": {
          "$value": "16px",
          "$type": "dimension",
          "$description": "Extra small icon size for compact UI",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "Badges, small buttons, compact indicators",
              "themable": false
            }
          }
        },
        "size-sm": {
          "$value": "20px",
          "$type": "dimension",
          "$description": "Small icon size for standard UI",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "Button icons, input icons, default icon size",
              "themable": false
            }
          }
        },
        "size-md": {
          "$value": "24px",
          "$type": "dimension",
          "$description": "Medium icon size for emphasized UI",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "Large buttons, card icons, section headers",
              "themable": false
            }
          }
        },
        "size-lg": {
          "$value": "32px",
          "$type": "dimension",
          "$description": "Large icon size for prominent UI",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "Modal headers, feature cards, hero sections",
              "themable": false
            }
          }
        },
        "size-xl": {
          "$value": "40px",
          "$type": "dimension",
          "$description": "Extra large icon size for hero UI",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "Hero sections, landing pages, large feature displays",
              "themable": false
            }
          }
        },
        "spacing": {
          "$value": "{semantic.ui.spacing-tight}",
          "$type": "dimension",
          "$description": "Spacing between icon and adjacent text",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "Button icon-text gap, input icon spacing",
              "themable": false
            }
          }
        }
      },
      "focus": {
        "outline-width": {
          "$value": "2px",
          "$type": "dimension",
          "$description": "Focus outline width for keyboard navigation",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "All interactive elements focus indicator",
              "a11y": "Required for WCAG 2.1 AA keyboard navigation",
              "themable": false
            }
          }
        },
        "outline-offset": {
          "$value": "2px",
          "$type": "dimension",
          "$description": "Focus outline offset from element edge",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "Focus ring spacing from element",
              "themable": false
            }
          }
        },
        "outline-color": {
          "$value": "{semantic.interactive.focus-ring}",
          "$type": "color",
          "$description": "Focus outline color",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "All interactive elements focus ring",
              "themable": true
            }
          }
        }
      },
      "transition": {
        "duration-fast": {
          "$value": "150ms",
          "$type": "duration",
          "$description": "Fast transition for subtle interactions",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "Hover states, color changes",
              "themable": false
            }
          }
        },
        "duration-normal": {
          "$value": "250ms",
          "$type": "duration",
          "$description": "Normal transition for standard interactions",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "Button clicks, input focus, tooltips",
              "themable": false
            }
          }
        },
        "timing-function": {
          "$value": "ease-in-out",
          "$type": "cubicBezier",
          "$description": "Standard easing function for smooth transitions",
          "$extensions": {
            "lufa": {
              "level": "component",
              "category": "shared",
              "useCase": "All component transitions",
              "themable": false
            }
          }
        }
      }
    }
  }
}
