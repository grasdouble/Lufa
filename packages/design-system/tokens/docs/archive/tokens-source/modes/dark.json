{
  "$schema": "https://tr.designtokens.org/format/",
  "$description": "Dark mode color overrides - Applied when data-mode='dark'",
  "color": {
    "text": {
      "primary": { "$type": "color", "$value": "{primitive.color.neutral.neutral.0}" },
      "secondary": { "$type": "color", "$value": "{primitive.color.neutral.neutral.300}" },
      "tertiary": { "$type": "color", "$value": "{primitive.color.neutral.neutral.400}" },
      "disabled": { "$type": "color", "$value": "{primitive.color.neutral.neutral.600}" },
      "inverse": { "$type": "color", "$value": "{primitive.color.neutral.neutral.900}" }
    },
    "background": {
      "primary": { "$type": "color", "$value": "{primitive.color.neutral.neutral.900}" },
      "secondary": { "$type": "color", "$value": "{primitive.color.neutral.neutral.800}" },
      "tertiary": { "$type": "color", "$value": "{primitive.color.neutral.neutral.700}" },
      "inverse": { "$type": "color", "$value": "{primitive.color.neutral.neutral.0}" },
      "overlay": { "$type": "color", "$value": "rgba(0, 0, 0, 0.7)" }
    },
    "border": {
      "default": { "$type": "color", "$value": "{primitive.color.neutral.neutral.700}" },
      "light": { "$type": "color", "$value": "{primitive.color.neutral.neutral.800}" },
      "medium": { "$type": "color", "$value": "{primitive.color.neutral.neutral.600}" },
      "strong": { "$type": "color", "$value": "{primitive.color.neutral.neutral.400}" }
    },
    "surface": {
      "default": { "$type": "color", "$value": "{primitive.color.neutral.neutral.900}" },
      "raised": { "$type": "color", "$value": "{primitive.color.neutral.neutral.800}" },
      "overlay": { "$type": "color", "$value": "{primitive.color.neutral.neutral.700}" },
      "inverse": { "$type": "color", "$value": "{primitive.color.neutral.neutral.0}" }
    }
  }
}
