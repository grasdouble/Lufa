{
  "$schema": "https://tr.designtokens.org/format/",
  "$description": "Core semantic size tokens for element-level dimensions",
  "size": {
    "none": { "$type": "dimension", "$value": "{primitive.size.0}", "$description": "0px - No size" },
    "xs": {
      "$type": "dimension",
      "$value": "{primitive.size.16}",
      "$description": "16px - Extra small (tiny icons, indicators)"
    },
    "sm": {
      "$type": "dimension",
      "$value": "{primitive.size.24}",
      "$description": "24px - Small (small buttons, small avatars)"
    },
    "md": {
      "$type": "dimension",
      "$value": "{primitive.size.32}",
      "$description": "32px - Medium (default buttons, icons)"
    },
    "touchTarget": {
      "$type": "dimension",
      "$value": "{primitive.size.44}",
      "$description": "44px - WCAG minimum touch target"
    },
    "lg": {
      "$type": "dimension",
      "$value": "{primitive.size.48}",
      "$description": "48px - Large (large buttons, avatars)"
    },
    "xl": {
      "$type": "dimension",
      "$value": "{primitive.size.64}",
      "$description": "64px - Extra large (feature icons, large avatars)"
    },
    "2xl": {
      "$type": "dimension",
      "$value": "{primitive.size.96}",
      "$description": "96px - 2x large (hero icons, profile pictures)"
    },
    "3xl": {
      "$type": "dimension",
      "$value": "{primitive.size.128}",
      "$description": "128px - 3x large (large images, logos)"
    },
    "4xl": {
      "$type": "dimension",
      "$value": "{primitive.size.192}",
      "$description": "192px - 4x large (thumbnails, product images)"
    }
  }
}
