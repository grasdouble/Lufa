      },
      "strong": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.600}",
        "$description": "Strong borders"
      },
      "focus": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.blue.500}",
        "$description": "Focus state borders"
      }
    },
    "interactive": {
      "default": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.blue.600}",
        "$description": "Default interactive (AAA)"
      },
      "hover": { "$type": "color", "$value": "{primitive.color.chromatic.blue.700}", "$description": "Hover state" },
      "active": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.blue.800}",
        "$description": "Active/pressed state"
      },
      "disabled": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.300}",
        "$description": "Disabled state"
      },
      "focus": { "$type": "color", "$value": "{primitive.color.chromatic.blue.500}", "$description": "Focus state" }
    },
    "success": {
      "default": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.green.600}",
