      "active": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.orange.800}",
        "$description": "Warning active"
      },
      "light": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.orange.50}",
        "$description": "Warning background light"
      },
      "lighter": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.orange.100}",
        "$description": "Warning background lighter"
      },
      "border": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.orange.300}",
        "$description": "Warning border"
      },
      "text": { "$type": "color", "$value": "{primitive.color.chromatic.orange.700}", "$description": "Warning text" }
    },
    "error": {
      "default": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.red.600}",
