      },
      "overlay": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.100}",
        "$description": "Overlay surface"
      },
      "inverse": { "$type": "color", "$value": "{primitive.color.neutral.neutral.900}", "$description": "Dark surface" }
    }
  }
