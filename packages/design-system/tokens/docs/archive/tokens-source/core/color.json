      "active": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.green.800}",
        "$description": "Success active"
      },
      "light": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.green.50}",
        "$description": "Success background light"
      },
      "lighter": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.green.100}",
