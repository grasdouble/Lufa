      "active": { "$type": "color", "$value": "{primitive.color.chromatic.red.800}", "$description": "Error active" },
      "light": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.red.50}",
        "$description": "Error background light"
      },
      "lighter": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.red.100}",
        "$description": "Error background lighter"
      },
      "border": { "$type": "color", "$value": "{primitive.color.chromatic.red.300}", "$description": "Error border" },
      "text": { "$type": "color", "$value": "{primitive.color.chromatic.red.700}", "$description": "Error text" }
