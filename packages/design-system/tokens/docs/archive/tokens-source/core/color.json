      "active": { "$type": "color", "$value": "{primitive.color.chromatic.blue.800}", "$description": "Info active" },
      "light": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.blue.50}",
        "$description": "Info background light"
      },
      "lighter": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.blue.100}",
        "$description": "Info background lighter"
      },
      "border": { "$type": "color", "$value": "{primitive.color.chromatic.blue.300}", "$description": "Info border" },
      "text": { "$type": "color", "$value": "{primitive.color.chromatic.blue.700}", "$description": "Info text" }
