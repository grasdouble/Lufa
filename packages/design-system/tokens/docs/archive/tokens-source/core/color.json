    "brand": {
      "primary": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.blue.600}",
        "$description": "Primary brand color"
      },
      "primaryHover": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.blue.700}",
        "$description": "Primary hover"
      },
      "primaryActive": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.blue.800}",
