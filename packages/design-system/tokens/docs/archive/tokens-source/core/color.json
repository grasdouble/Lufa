      "secondaryHover": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.purple.700}",
        "$description": "Secondary hover"
      },
      "secondaryActive": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.purple.800}",
        "$description": "Secondary active"
      },
      "accent": { "$type": "color", "$value": "{primitive.color.chromatic.teal.600}", "$description": "Accent color" }
    },
    "surface": {
      "default": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.0}",
        "$description": "Default surface"
      },
      "raised": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.50}",
