{
  "$schema": "https://tr.designtokens.org/format/",
  "$description": "Core semantic color tokens - Light mode (default)",
  "color": {
    "text": {
      "primary": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.900}",
        "$description": "Main text color (AAA)"
      },
      "secondary": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.700}",
        "$description": "Secondary text (AAA)"
      },
      "tertiary": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.600}",
        "$description": "Tertiary text (AAA)"
      },
      "disabled": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.400}",
        "$description": "Disabled text"
      },
      "inverse": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.0}",
        "$description": "Text on dark backgrounds"
      },
      "link": { "$type": "color", "$value": "{primitive.color.chromatic.blue.600}", "$description": "Link text (AAA)" },
      "linkHover": {
        "$type": "color",
        "$value": "{primitive.color.chromatic.blue.700}",
        "$description": "Link hover state"
      }
    },
    "background": {
      "primary": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.0}",
        "$description": "Main background"
      },
      "secondary": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.50}",
        "$description": "Secondary background"
      },
      "tertiary": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.100}",
        "$description": "Tertiary background"
      },
      "inverse": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.900}",
        "$description": "Dark background"
      },
      "overlay": { "$type": "color", "$value": "rgba(0, 0, 0, 0.5)", "$description": "Modal/overlay background" }
    },
    "border": {
      "default": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.300}",
        "$description": "Default borders"
      },
      "light": { "$type": "color", "$value": "{primitive.color.neutral.neutral.200}", "$description": "Light borders" },
      "medium": {
        "$type": "color",
        "$value": "{primitive.color.neutral.neutral.400}",
