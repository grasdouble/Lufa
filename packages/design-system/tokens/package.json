{
  "name": "@grasdouble/lufa_design-system-tokens",
  "version": "0.4.0",
  "private": false,
  "description": "Lufa Design System - Semantic design tokens (colors, spacing, typography, etc.)",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/tokens.d.ts",
      "import": "./dist/tokens.js",
      "default": "./dist/tokens.js"
    },
    "./tokens.css": "./dist/tokens.css"
  },
  "main": "./dist/tokens.js",
  "module": "./dist/tokens.js",
  "types": "./dist/tokens.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm clean && style-dictionary build --config ./style-dictionary.config.js",
    "build:watch": "style-dictionary build --config ./style-dictionary.config.js --watch",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "prettier": "prettier --write .",
    "validate": "node ../../../scripts/validate-token-metadata.js"
  },
  "dependencies": {
    "@grasdouble/lufa_design-system-primitives": "workspace:^"
  },
  "devDependencies": {
    "@grasdouble/lufa_config_eslint": "workspace:^",
    "@grasdouble/lufa_config_prettier": "workspace:^",
    "@grasdouble/lufa_config_tsconfig": "workspace:^",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "prettier": "^3.8.0",
    "prettier-plugin-packagejson": "^2.5.22",
    "style-dictionary": "^4.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  }
}
