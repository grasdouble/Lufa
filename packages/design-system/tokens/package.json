{
  "name": "@grasdouble/lufa_design-system-tokens",
  "version": "0.5.0",
  "private": false,
  "description": "Lufa Design System - Semantic design tokens (colors, spacing, typography, etc.)",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./dist/tokens-values.json",
    "./tokens.css": "./dist/tokens.css",
    "./values": "./dist/tokens-values.json",
    "./metadata": "./dist/tokens-metadata.json"
  },
  "main": "./dist/tokens-values.json",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm clean && style-dictionary build --config ./style-dictionary.config.js && pnpm check:size",
    "check:size": "node scripts/check-css-size.mjs",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@grasdouble/lufa_config_eslint": "workspace:^",
    "@grasdouble/lufa_config_prettier": "workspace:^",
    "@grasdouble/lufa_config_tsconfig": "workspace:^",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-packagejson": "^2.5.22",
    "style-dictionary": "^4.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  }
}
