{
  "name": "@grasdouble/lufa_plugin_vscode_lufa-ds-preview",
  "displayName": "Lufa DS Preview",
  "version": "0.3.0",
  "private": false,
  "description": "Token previews and decorators for the Lufa design system",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/grasdouble/Lufa.git",
    "directory": "packages/plugins/vscode/vscode-lufa-ds-preview"
  },
  "publisher": "grasdouble",
  "main": "./dist/extension.js",
  "scripts": {
    "build": "pnpm clean && node esbuild.mjs",
    "build-and-install": "pnpm run build && ./scripts/package.sh --install",
    "build-and-no-install": "pnpm run build && ./scripts/package.sh",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "watch": "node esbuild.mjs --watch"
  },
  "contributes": {
    "configuration": {
      "title": "Lufa DS Preview",
      "properties": {
        "lufaDsPreview": {
          "type": "object",
          "description": "Configuration for Lufa DS Preview.",
          "properties": {
            "primitivesMapPath": {
              "type": "string",
              "description": "Optional: Path to the primitives map JSON (relative to workspace root or absolute). If not set, the packaged primitives map is used."
            },
            "tokensMapPath": {
              "type": "string",
              "description": "Optional: Path to the tokens map JSON (relative to workspace root or absolute). If not set, the packaged tokens map is used."
            },
            "debug": {
              "type": "boolean",
              "default": false,
              "description": "Enable debug logging for failed color parsing."
            }
          },
          "default": {
            "debug": false
          }
        }
      }
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "dependencies": {
    "@grasdouble/lufa_design-system-tokens": "workspace:^",
    "culori": "^4.0.2"
  },
  "devDependencies": {
    "@grasdouble/lufa_config_eslint": "workspace:^",
    "@grasdouble/lufa_config_prettier": "workspace:^",
    "@secretlint/secretlint-rule-no-dotenv": "^11.3.0",
    "@secretlint/secretlint-rule-preset-recommend": "^11.3.0",
    "@types/node": "^25.0.10",
    "@types/vscode": "^1.108.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  }
}
