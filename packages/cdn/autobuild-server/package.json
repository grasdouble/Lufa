{
  "name": "@grasdouble/cdn_autobuild-server",
  "version": "0.3.4",
  "private": false,
  "description": "Self-fed CDN from npm packages",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.mjs --platform=node --format=esm --external:esbuild",
    "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/index.cjs --platform=node --external:esbuild",
    "dev": "dotenvx run --env-file=.env.development --env-file=.env -- nodemon --exec tsx src/index.ts",
    "lint": "eslint",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "preview": "dotenvx run --env-file=.env.production --env-file=.env -- node dist/index.cjs",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts}": [
      "bash -c 'pnpm typecheck'"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.52.0",
    "cors": "^2.8.6",
    "escape-html": "^1.0.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "fs-extra": "^11.3.3",
    "pacote": "^21.3.1",
    "sanitize-filename": "^1.6.3"
  },
  "devDependencies": {
    "@grasdouble/lufa_config_eslint": "workspace:^",
    "@grasdouble/lufa_config_prettier": "workspace:^",
    "@grasdouble/lufa_config_tsconfig": "workspace:^",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "@types/cors": "^2.8.19",
    "@types/escape-html": "^1.0.4",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.1.0",
    "@types/pacote": "^11.1.8",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "prettier-plugin-packagejson": "^3.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  }
}
