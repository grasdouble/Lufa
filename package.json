{
  "name": "@grasdouble/lufa",
  "private": true,
  "scripts": {
    "all:-----------------------------------------------": "",
    "all:build": "pnpm --filter @grasdouble/* run build",
    "all:lint": "pnpm --filter @grasdouble/* run lint",
    "all:prettier:check": "pnpm --filter @grasdouble/* run prettier:check",
    "all:prettier:write": "pnpm --filter @grasdouble/* run prettier:write",
    "all:test": "pnpm --filter @grasdouble/* run test",
    "all:typecheck": "pnpm --filter @grasdouble/* run typecheck",
    "app:mf:--------------------------------------------": "",
    "app:mf:build": "pnpm --filter @grasdouble/lufa_microfrontend_main-container run build && pnpm --filter @grasdouble/lufa_microfrontend_home run build",
    "app:mf:dev": "concurrently \"pnpm --filter @grasdouble/lufa_microfrontend_main-container run dev\" \"pnpm --filter @grasdouble/lufa_microfrontend_home run dev\"",
    "app:mf:preview": "pnpm --filter @grasdouble/lufa_microfrontend_main-container run preview & pnpm --filter @grasdouble/lufa_microfrontend_home run preview",
    "cdn:autobuild-server:-------------------------------": "",
    "cdn:autobuild-server:build": "pnpm --filter @grasdouble/cdn_autobuild-server run build && pnpm --filter @grasdouble/cdn_autobuild-server run build:cjs",
    "cdn:autobuild-server:dev": "pnpm --filter @grasdouble/cdn_autobuild-server run dev",
    "cdn:autobuild-server:lint": "pnpm --filter @grasdouble/cdn_autobuild-server run lint",
    "cdn:autobuild-server:prettier:check": "pnpm --filter @grasdouble/cdn_autobuild-server run prettier:check",
    "cdn:autobuild-server:prettier:write": "pnpm --filter @grasdouble/cdn_autobuild-server run prettier:write",
    "cdn:autobuild-server:preview": "pnpm --filter @grasdouble/cdn_autobuild-server run preview",
    "ds:all:--------------------------------------------": "",
    "ds:all:build": "pnpm ds:tokens:build && pnpm ds:themes:build && pnpm ds:main:build && pnpm ds:storybook:build && pnpm ds:docusaurus:build",
    "ds:all:dev": "concurrently \"pnpm ds:main:dev\" \"pnpm ds:storybook:dev\" \"pnpm ds:docusaurus:dev\"",
    "ds:all:lint": "pnpm ds:primitives:lint && pnpm ds:tokens:lint && pnpm ds:themes:lint && pnpm ds:main:lint && pnpm ds:storybook:lint && pnpm ds:docusaurus:lint",
    "ds:all:prettier:check": "pnpm ds:primitives:prettier:check && pnpm ds:tokens:prettier:check && pnpm ds:themes:prettier:check && pnpm ds:main:prettier:check && pnpm ds:storybook:prettier:check && pnpm ds:docusaurus:prettier:check",
    "ds:all:prettier:write": "pnpm ds:primitives:prettier:write && pnpm ds:tokens:prettier:write && pnpm ds:themes:prettier:write && pnpm ds:main:prettier:write && pnpm ds:storybook:prettier:write && pnpm ds:docusaurus:prettier:write",
    "ds:all:typecheck": "pnpm ds:primitives:typecheck && pnpm ds:tokens:typecheck && pnpm ds:themes:typecheck && pnpm ds:main:typecheck && pnpm ds:storybook:typecheck && pnpm ds:docusaurus:typecheck",
    "ds:docusaurus:----------------------------------": "",
    "ds:docusaurus:build": "pnpm --filter @grasdouble/lufa_design-system-docusaurus run build",
    "ds:docusaurus:dev": "pnpm --filter @grasdouble/lufa_design-system-docusaurus run dev",
    "ds:docusaurus:lint": "pnpm --filter @grasdouble/lufa_design-system-docusaurus run lint",
    "ds:docusaurus:prettier:check": "pnpm --filter @grasdouble/lufa_design-system-docusaurus run prettier:check",
    "ds:docusaurus:prettier:write": "pnpm --filter @grasdouble/lufa_design-system-docusaurus run prettier:write",
    "ds:docusaurus:typecheck": "pnpm --filter @grasdouble/lufa_design-system-docusaurus run typecheck",
    "ds:docusaurus:validate:token-usage": "pnpm --filter @grasdouble/lufa_design-system-docusaurus run validate:token-usage",
    "ds:docusaurus:validate:token-usage:unused": "pnpm --filter @grasdouble/lufa_design-system-docusaurus run validate:token-usage:unused",
    "ds:docusaurus:validate:token-usage:verbose": "pnpm --filter @grasdouble/lufa_design-system-docusaurus run validate:token-usage:verbose",
    "ds:main:-------------------------------------------": "",
    "ds:main:build": "pnpm --filter @grasdouble/lufa_design-system run build",
    "ds:main:dev": "pnpm --filter @grasdouble/lufa_design-system run build -w",
    "ds:main:lint": "pnpm --filter @grasdouble/lufa_design-system run lint",
    "ds:main:prettier:check": "pnpm --filter @grasdouble/lufa_design-system run prettier:check",
    "ds:main:prettier:write": "pnpm --filter @grasdouble/lufa_design-system run prettier:write",
    "ds:main:typecheck": "pnpm --filter @grasdouble/lufa_design-system run typecheck",
    "ds:main:validate:token-usage": "pnpm --filter @grasdouble/lufa_design-system run validate:token-usage",
    "ds:main:validate:token-usage:unused": "pnpm --filter @grasdouble/lufa_design-system run validate:token-usage:unused",
    "ds:main:validate:token-usage:verbose": "pnpm --filter @grasdouble/lufa_design-system run validate:token-usage:verbose",
    "ds:storybook:--------------------------------------": "",
    "ds:storybook:build": "pnpm --filter @grasdouble/lufa_design-system-storybook run build",
    "ds:storybook:dev": "pnpm --filter @grasdouble/lufa_design-system-storybook run dev",
    "ds:storybook:lint": "pnpm --filter @grasdouble/lufa_design-system-storybook run lint",
    "ds:storybook:prettier:check": "pnpm --filter @grasdouble/lufa_design-system-storybook run prettier:check",
    "ds:storybook:prettier:write": "pnpm --filter @grasdouble/lufa_design-system-storybook run prettier:write",
    "ds:storybook:typecheck": "pnpm --filter @grasdouble/lufa_design-system-storybook run typecheck",
    "ds:test:-------------------------------------------": "",
    "ds:test:ci": "pnpm --filter @grasdouble/lufa_design-system-playwright test-ct",
    "ds:test:compress-snapshots": "pnpm --filter @grasdouble/lufa_design-system-playwright compress-snapshots",
    "ds:test:docker:update-snapshots-linux": "pnpm --filter @grasdouble/lufa_design-system-playwright docker:update-snapshots-linux",
    "ds:test:prettier:check": "pnpm --filter @grasdouble/lufa_design-system-playwright run prettier:check",
    "ds:test:prettier:write": "pnpm --filter @grasdouble/lufa_design-system-playwright run prettier:write",
    "ds:test:ui": "pnpm --filter @grasdouble/lufa_design-system-playwright test-ct:ui",
    "ds:test:update-snapshots": "pnpm --filter @grasdouble/lufa_design-system-playwright test-ct:update-snapshots",
    "ds:test:validate-system": "pnpm --filter @grasdouble/lufa_design-system-playwright validate-system",
    "ds:themes:-----------------------------------------": "",
    "ds:themes:build": "pnpm --filter @grasdouble/lufa_design-system-themes run build",
    "ds:themes:lint": "pnpm --filter @grasdouble/lufa_design-system-themes run lint",
    "ds:themes:prettier:check": "pnpm --filter @grasdouble/lufa_design-system-themes run prettier:check",
    "ds:themes:prettier:write": "pnpm --filter @grasdouble/lufa_design-system-themes run prettier:write",
    "ds:themes:typecheck": "pnpm --filter @grasdouble/lufa_design-system-themes run typecheck",
    "ds:tokens:-----------------------------------------": "",
    "ds:tokens:build": "pnpm --filter @grasdouble/lufa_design-system-tokens run build",
    "ds:tokens:lint": "pnpm --filter @grasdouble/lufa_design-system-tokens run lint",
    "ds:tokens:prettier:check": "pnpm --filter @grasdouble/lufa_design-system-tokens run prettier:check",
    "ds:tokens:prettier:write": "pnpm --filter @grasdouble/lufa_design-system-tokens run prettier:write",
    "ds:tokens:typecheck": "pnpm --filter @grasdouble/lufa_design-system-tokens run typecheck",
    "ds:tokens:validate:tokens": "pnpm --filter @grasdouble/lufa_design-system-tokens run validate:tokens",
    "lint-staged": "lint-staged",
    "plugin:vite:---------------------------------------": "",
    "plugin:vite:lint": "pnpm --filter @grasdouble/lufa_plugin_vite_* run lint",
    "plugin:vite:prettier:check": "pnpm --filter @grasdouble/lufa_plugin_vite_* run prettier:check",
    "plugin:vite:prettier:write": "pnpm --filter @grasdouble/lufa_plugin_vite_* run prettier:write",
    "prepare": "husky",
    "tools:---------------------------------------------": "",
    "tools:bmad:status": "pnpm dlx bmad-method status",
    "tools:bmad:update": "pnpm dlx bmad-method install",
    "tools:bmad:viewer": "pnpm dlx bmad-viewer",
    "tools:generate-outdated-report": "node .github/actions/dependency-update/generateOutdatedReport.js",
    "validate:------------------------------------------": "",
    "validate:components": "node scripts/validate-components.js",
    "validate:docs": "bash scripts/validate-ai-docs.sh"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "bash -c 'pnpm all:typecheck'"
    ],
    "*.{json,md,yml,yaml,css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@grasdouble/lufa_config_prettier": "workspace:^",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-packagejson": "^3.0.0"
  },
  "packageManager": "pnpm@10.28.2"
}
