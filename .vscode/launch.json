{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Lufa: Run Color Preview Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/tools/vscode-lufa-colors",
        "${workspaceFolder}"
      ],
      "outFiles": ["${workspaceFolder}/tools/vscode-lufa-colors/dist/**/*.js"],
      "preLaunchTask": "Lufa: Build color preview (map + extension)"
    }
  ]
}
